<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>Drop to Shop</title>
    <style>
      * {
        box-sizing: border-box;
      }
      body {
        font-family: system-ui, -apple-system, sans-serif;
        max-width: 400px;
        margin: 4rem auto;
        padding: 1rem;
        text-align: center;
      }
      h1 {
        font-size: 1.5rem;
        margin-bottom: 2rem;
      }
      .upload-section {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
      input[type="file"] {
        padding: 1rem;
        border: 2px dashed #ccc;
        border-radius: 8px;
        cursor: pointer;
      }
      input[type="file"]:hover {
        border-color: #666;
      }
      button {
        padding: 1rem 2rem;
        font-size: 1rem;
        background: #232f3e;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
      }
      button:hover {
        background: #37475a;
      }
      button:disabled {
        background: #ccc;
        cursor: not-allowed;
      }
      .loading {
        display: none;
        margin-top: 1rem;
        color: #666;
      }
      .loading.show {
        display: block;
      }
      #results {
        display: none;
        margin-top: 2rem;
        flex-direction: column;
        gap: 0.75rem;
      }
      #results.show {
        display: flex;
      }
      .product-btn {
        padding: 1rem;
        font-size: 0.95rem;
        background: #ff9900;
        color: #111;
        font-weight: 600;
        text-decoration: none;
        border-radius: 8px;
        transition: background 0.2s;
      }
      .product-btn:hover {
        background: #e88b00;
      }
      .error {
        color: #c00;
        margin-top: 1rem;
        display: none;
      }
      .error.show {
        display: block;
      }
      .reset-btn {
        margin-top: 1rem;
        background: #666;
      }
    </style>
  </head>
  <body>
    <h1>Drop to Shop</h1>
    
    <div class="upload-section" id="upload-section">
      <input type="file" name="image" accept="image/*" required id="file-input" />
      <button type="button" id="search-btn">Find on Amazon</button>
    </div>
    
    <p class="loading" id="loading">Searching...</p>
    <p class="error" id="error"></p>
    
    <div id="results"></div>
    
    <script is:inline>
      const fileInput = document.getElementById('file-input');
      const searchBtn = document.getElementById('search-btn');
      const loading = document.getElementById('loading');
      const error = document.getElementById('error');
      const results = document.getElementById('results');
      const uploadSection = document.getElementById('upload-section');

      searchBtn.addEventListener('click', async function() {
        const file = fileInput.files[0];
        if (!file) {
          alert('Please select an image');
          return;
        }

        // Reset state
        error.classList.remove('show');
        results.classList.remove('show');
        results.innerHTML = '';
        
        // Show loading
        loading.classList.add('show');
        searchBtn.disabled = true;

        try {
          const formData = new FormData();
          formData.append('image', file);

          const res = await fetch('/api/find', {
            method: 'POST',
            body: formData
          });

          const data = await res.json();
          console.log('API response:', data);

          if (!res.ok || data.error) {
            throw new Error(data.error || 'Request failed');
          }

          // Show results
          let html = '';
          if (data.product) {
            html += `<p style="margin-bottom:1rem;font-weight:600">${data.product}</p>`;
          }
          
          if (data.amazonAppUrl) {
            // New format with app deep link
            html += `<a href="${data.amazonAppUrl}" class="product-btn" id="app-link">Open in Amazon App</a>`;
            html += `<a href="${data.amazonWebUrl}" target="_blank" rel="noopener" class="product-btn" style="background:#232f3e;color:white">Open in Browser</a>`;
          } else {
            // Fallback for old format
            const items = data.products || data.links || [];
            html += items.map(p => 
              `<a href="${p.url}" target="_blank" rel="noopener" class="product-btn">${p.title}</a>`
            ).join('');
          }
          
          html += '<button class="reset-btn" onclick="location.reload()">Search Again</button>';
          results.innerHTML = html;
          results.classList.add('show');
          uploadSection.style.display = 'none';
          
          // Auto-open Amazon app on mobile
          if (data.amazonAppUrl && /iPhone|iPad|Android/i.test(navigator.userAgent)) {
            window.location.href = data.amazonAppUrl;
          }

        } catch (e) {
          console.error('Error:', e);
          error.textContent = e.message;
          error.classList.add('show');
          searchBtn.disabled = false;
        } finally {
          loading.classList.remove('show');
        }
      });
    </script>
  </body>
</html>
